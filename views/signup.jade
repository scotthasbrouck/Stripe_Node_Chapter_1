extends index

block append content
  h2 Signup
  form(name="signup", action="/users/create", method="post")
    div
      label Email
      input(type="text", name="email")
    div
      label Password
      input(type="password", name="password")
    if errors
      ul
        for error in errors
          li #{error}
    div
      input(type="submit", value="Get Started")
